<h1>Críticas</h1>
<div class="row">
  {{#each reviews}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{#if user}}
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="review-text">{{stripTags (truncate body 150)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            <a href="/reviews/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/reviews/show/{{id}}">Leer Más</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No hay críticas encontradas</p>
  {{/each}}
</div>