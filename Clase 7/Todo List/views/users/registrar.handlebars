<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <h1 class="text-center">Nueva Cuenta</h1>
      <form class="form">
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="name" class="sr-only">Nombre</label>
          <input type="text" placeholder="Nombre" class="form-control flex-grow-1 flex-fill" name="name" id="name" autofocus required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="email" class="sr-only">Email</label>
          <input type="email" placeholder="Email" class="form-control flex-grow-1 flex-fill" name="email" id="email" required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="password" class="sr-only">Contraseña</label>
          <input type="password" placeholder="Contraseña" class="form-control flex-grow-1 flex-fill" name="password" id="password" required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="password2" class="sr-only">Confirmar Contraseña</label>
          <input type="password" placeholder="Confirmar Contraseña" class="form-control flex-grow-1 flex-fill" name="password2" id="password2" required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <button id="registrarse" class="btn btn-warning btn-block" type="submit">Registrarse</button>
        </div>
      </form>
      <hr>
      <a class="mx-auto d-table" href="/login"><button class="btn btn-primary">Iniciar Sesión</button></a>
    </div>   
  </div>
</div>