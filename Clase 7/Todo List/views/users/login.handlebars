<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <h1 class="text-center">Iniciar Sesión</h1>
      <form class="form" action="/login" method="POST">
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="email" class="sr-only">Email</label>
          <input type="email" placeholder="Email" class="form-control flex-grow-1 flex-fill" name="email" id="email" autofocus required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <label for="password" class="sr-only">Contraseña</label>
          <input type="password" placeholder="Contraseña" class="form-control flex-grow-1 flex-fill" name="password" id="password" required>
        </div>
        <div class="form-group mb-2 d-flex col-xs-12 col-lg-8 offset-lg-2">
          <button id="iniciar-sesion" class="btn btn-warning btn-block" type="submit">Iniciar</button>
        </div>
      </form>
      <hr>
      <a class="mx-auto d-table" href="/registrar"><button class="btn btn-primary">Registarme</button></a>
    </div>   
  </div>
</div>